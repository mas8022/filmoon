generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  fullName     String
  email        String  @unique
  password     String
  phone        String  @unique
  check        Boolean @default(false)
  refreshToken String  @unique
  role         String  @default("USER")
}

model Otp {
  id      Int    @id @default(autoincrement())
  phone   String
  code    String
  expTime BigInt
}
